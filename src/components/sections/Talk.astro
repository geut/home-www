---
import Navbar from '../Navbar';
import AnimatedSection from '../AnimatedSection';
import { slide } from "astro:transitions";
import CalendlyForm from '../CalendlyForm';
const { navLinks } = Astro.props;
---

<AnimatedSection styles='p-6' client:load transition:animate={slide({ duration: "0.1s" })}>
  <Navbar navLinks={navLinks} client:load transition:persist/>
  <div class="flex flex-col relative h-full overflow-hidden max-h-screen">
    <div class="flex-1 flex items-center justify-center my-20 lg:my-14">
      <div class='introduction w-full h-full flex flex-1 flex-col'>
          <div class='intro-text-box'>
              <h2
                  class='intro-text h2 leading-[4rem] md:leading-[8rem] font-bold text-[3rem] md:text-[4rem] lg:text-[6rem] xl:text-[7rem]'
              >
                  Let's talk
              </h2>
          </div>
        <div class='h-full flex flex-1 justify-center items-center rounded-lg'>
          <CalendlyForm client:load/>
        </div>
      </div>
    </div>
  </div>
</AnimatedSection>