---
import { slide } from "astro:transitions"
import ActionButtons, { type actionKeys } from "../ActionButtons"
import AnimatedSection from "../AnimatedSection"
import CalForm from "../CalForm"
import Navbar from "../Navbar"
const actionButtonsKeys = ["work"] as unknown as actionKeys[]
const { navLinks } = Astro.props
---

<AnimatedSection styles='p-4' ids='talk' client:load transition:animate={slide({ duration: "0.1s" })}>
  <Navbar navLinks={navLinks} client:load transition:persist/>
  <div class="flex flex-col relative h-full lg:overflow-hidden max-w-7xl mx-auto">
    <div class="flex-1 flex items-center justify-center mt-18">
      <div class='introduction mx-6 lg:mx-10 w-full h-full flex flex-1 flex-col'>
        <div class='intro-text-box'>
            <h2
              class='intro-text inline-flex h2 leading-[4rem] md:leading-[8rem] font-inter'
            >
              Let's talk!
            </h2>
        </div>
        <div class='h-full no-scrollbar flex flex-1 justify-center rounded-lg'>
          <CalForm client:only="react"/>
        </div>
      </div>
    </div>
    <div class="fixed bottom-6 lg:bottom-12 left-6 right-6 z-10 flex-none bg-transparent">
      <ActionButtons client:only="react" actions={actionButtonsKeys} />
    </div>
  </div>
</AnimatedSection>