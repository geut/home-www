---
import { slide } from "astro:transitions"
import AnimatedSection from "../AnimatedSection"
import Navbar from "../Navbar"

const { navLinks } = Astro.props
import ActionButtons, { type actionKeys } from "../ActionButtons"
import Experience from "../WorkProof"

const actionButtonsKeys = ["team"] as unknown as actionKeys[]
---

<AnimatedSection ids="work" styles="p-4" client:load transition:animate={slide({ duration: "0.1s" })}>
  <Navbar navLinks={navLinks} client:load transition:persist />
  <div class="flex flex-col relative h-full overflow-hidden max-w-8xl mx-auto">
    <div class="flex-1 flex items-center justify-center mt-18">
      <div class="introduction mx-2 lg:mx-10 w-full h-full flex flex-1 flex-col">
        <div class="intro-text-box">
          <h2 class="intro-text inline-flex mx-4 lg:mx-0 h2 leading-[4rem] md:leading-[8rem] font-inter">
            Latest Work
          </h2>
        </div>
        <div class="flex flex-1 self-center justify-center max-h-[calc(100vh-20rem)]">
          <Experience client:only="react" />
        </div>
      </div>
    </div>
    <div class="fixed bottom-6 lg:bottom-12 left-6 right-6 z-10 flex-none bg-transparent">
      <ActionButtons client:only="react" actions={actionButtonsKeys as actionKeys[]} />
    </div>
  </div>
</AnimatedSection>
